skinparam shadowing false
skinparam ParticipantPadding 40
skinparam BoxPadding 40

skinparam BackgroundColor $ALT
skinparam FontColor $BASE

skinparam Agent {
    BorderColor transparent
}

skinparam Note {
    BackGroundColor $RED
    FontColor $BASE
    FontSize 12
    BorderThickness 0
}

skinparam Sequence {
    ArrowColor $ALT09
    NewpageSeparatorColor $BASE
    ArrowFontColor $ALT09
    StereotypeFontColor $BASE

    LifeLine {
        BorderColor $BLUE05
        BackgroundColor $BLUE03
    }
    Participant {
        BorderColor $BLUE
        BackgroundColor $BLUE
        ' FontName Impact
        FontSize 12
        FontColor $BASE
    }
    Reference {
        HeaderBackgroundColor $RED
        BackgroundColor $RED05
        BorderColor $RED
        FontColor $ALT06
        FontStyle normal
    }
    Box {
        BackgroundColor $BASE09
        BorderColor transparent
        FontColor $ALT06
        FontStyle normal
    }
    Group {
        BackgroundColor $YELLOW
        BodyBackgroundColor $YELLOW03
        BorderThickness 1
        FontColor $ALT09
    }
    Actor {
        BorderColor $ALT06
        BackgroundColor $BLUE
        FontColor $ALT06
        FontSize 14
        ' FontName Aapex
    }
}

skinparam Activity {
    StartColor $PURPLE
    BarColor $YELLOW
    EndColor $PURPLE

    FontColor $BASE
    BackgroundColor $BLUE
    BorderColor transparent

    DiamondFontColor $ALT06
    DiamondBackgroundColor $YELLOW
    DiamondBorderColor transparent


    BackgroundColor<< Begin >> $PURPLE
}

skinparam Partition {
    BackgroundColor $BASE09
    BorderColor $ALT09
    BorderThickness 1
    FontSize 12
}

skinparam State {
    StartColor $ORANGE
